
<web-app version="3.0">
  <display-name>BeautyService</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/jsp/error.jsp</location>
  </error-page>

  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>servlet.Controller</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <!--Encoding filter UTF-8 for all requests-->
  <filter>
    <filter-name>EncodingRequestFilter</filter-name>
    <filter-class>filter.EncodingRequestFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingRequestFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <!--Encoding filter UTF-8 for all responses-->
  <filter>
    <filter-name>EncodingResponseFilter</filter-name>
    <filter-class>filter.EncodingResponseFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingResponseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>